<div class="container py-5">
  <div class="text-center mb-4">
    <h1 class="fw-bold" style="color: #4B9857;">📝 Therapy Requests</h1>
  </div>

  <div class="table-responsive">
    <table class="table table-hover align-middle shadow-sm">
      <thead class="table-bordered">
        <tr>
          <th scope="col" class="bg-dark-subtle">Name</th>
          <th scope="col" class="bg-dark-subtle">Role</th>
          <th scope="col" class="bg-dark-subtle">Status</th>
          <th scope="col" class="bg-dark-subtle">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @requests.each do |request| %>
          <%= render "therapy_request", request: request %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
