<%# app/views/devise/passwords/edit.html.erb %>
<div class="devise-page">
  <div class="page-container">
    <!-- Welcome Section -->
    <div class="welcome-section">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-8">
            <div class="welcome-container">
              <div class="form-group">
                <h1 class="text-center">Welcome to mindme</h1>
                <p class="text-center">Create a new password for your account</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Change Password Form -->
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="signup-container">
            <div class="signup-header">
              <h2><i class="fas fa-lock me-2"></i>Change Password</h2>
              <p>Enter your new password below</p>
            </div>

            <div class="signup-body">
              <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'change-password-form' }) do |f| %>
                <%= f.error_notification %>

                <%= f.input :reset_password_token, as: :hidden %>

                <div class="form-inputs">
                  <%= f.input :password,
                              label: "New Password",
                              required: true,
                              autofocus: true,
                              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                              input_html: {
                                autocomplete: "new-password",
                                class: "form-control",
                                placeholder: "Enter your new password"
                              },
                              wrapper_html: { class: "form-group" } %>

                  <%= f.input :password_confirmation,
                              label: "Confirm New Password",
                              required: true,
                              input_html: {
                                autocomplete: "new-password",
                                class: "form-control",
                                placeholder: "Confirm your new password"
                              },
                              wrapper_html: { class: "form-group" } %>
                </div>

                <div class="form-actions">
                  <%= f.button :submit, "Change Password", class: "btn btn-primary btn-signup" %>
                </div>
              <% end %>

              <div class="devise-links">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
