<% alignment = message.patient_id == current_user.id ? 'text-start' : 'text-end' %>
<% bg_class = message.patient_id == current_user.id ? 'bg-light' : 'bg-primary text-white' %>

<div class="mb-2 d-flex flex-column <%= alignment %>">
  <div class="p-2 rounded <%= bg_class %>" style="max-width: 75%; display: inline-block;">
    <%= message.content %>
  </div>
  <small class="text-muted">
    <%= message.created_at.present? ? l(message.created_at, format: :short) : "" %>
  </small>
</div>
