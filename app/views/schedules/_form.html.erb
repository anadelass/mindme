<div class="d-flex justify-content-center align-items-center p-4" style="font-family: 'Poppins', sans-serif;">
  <%= simple_form_for @schedule, html: { class: "bg-white border p-4 rounded-3 shadow w-100", style: "max-width: 500px;" } do |f| %>
    <div class="mb-3">
      <%= f.input :date, as: :date, label: "Date", input_html: { class: "form-control" } %>
    </div>
    <div class="mb-3">
      <%= f.input :start_hour, as: :time, label: "Start Hour", input_html: { class: "form-control" } %>
    </div>
    <div class="mb-3">
      <%= f.input :end_hour, as: :time, label: "End Hour", input_html: { class: "form-control" } %>
    </div>
    <%= f.button :submit, 'Send', class: 'btn', style: 'background-color: #2EC4B5; color: white; font-weight: bold; border-radius: 8px;' %>
  <% end %>
</div>
