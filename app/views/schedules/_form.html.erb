<div class="container py-5 d-flex justify-content-center align-items-center" style="font-family: 'Poppins', sans-serif;">
  <div class="card bg-white shadow-sm border-0 w-100" style="max-width: 500px;">
    <div class="card-body">
      <%= simple_form_for @schedule do |f| %>
        <h2 class="mb-4 text-center fw-bold text-success">🗓️ Schedule a Session</h2>

        <div class="mb-3">
          <%= f.input :date, as: :date, label: "Date", input_html: { class: "form-control" }, label_html: { class: "form-label fw-semibold" } %>
        </div>

        <div class="mb-3">
          <%= f.input :start_hour, as: :time, label: "Start Hour", input_html: { class: "form-control" }, label_html: { class: "form-label fw-semibold" } %>
        </div>

        <div class="mb-4">
          <%= f.input :end_hour, as: :time, label: "End Hour", input_html: { class: "form-control" }, label_html: { class: "form-label fw-semibold" } %>
        </div>

        <div class="d-grid">
          <%= f.button :submit, 'Send', class: 'btn btn-success fw-bold rounded-pill' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
