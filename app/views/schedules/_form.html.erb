<%= simple_form_for @schedule, html: { class: "simple_form" } do |f|  %>
  <%= f.input :date, as: :date, input_html: { class: "form-control" } %>
  <%= f.input :start_hour, as: :time, input_html: { class: "form-control" } %>
  <%= f.input :end_hour, as: :time, input_html: { class: "form-control" } %>
  <%= f.button :submit, 'Send', class: 'btn-submit' %>
<% end %>
